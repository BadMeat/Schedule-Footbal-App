<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <com.imangazaliev.circlemenu.CircleMenu
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/circleMenu">

        <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#2196F3"
                app:colorPressed="#1E88E5"
                app:icon="@drawable/ic_queue_play_next_black_24dp"/>

        <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#F44336"
                app:colorPressed="#E53935"
                app:icon="@drawable/ic_stars_black_24dp"/>

        <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#4CAF50"
                app:colorPressed="#43A047"
                app:icon="@drawable/ic_timer_black_24dp"/>

    </com.imangazaliev.circlemenu.CircleMenu>

</LinearLayout>